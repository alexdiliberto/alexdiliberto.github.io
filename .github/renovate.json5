{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    "group:allNonMajor"
  ],
  "mise": {"enabled": true},
  "timezone": "America/New_York",
  "schedule": ["before 6am on monday"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "rebaseWhen": "behind-base-branch",
  "minimumReleaseAge": "3 days",
  "lockFileMaintenance": {"enabled": true, "schedule": ["monthly"]},
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchPackageNames": ["github.com/adityatelange/hugo-PaperMod"],
      "groupName": "hugo-theme",
      "automerge": false,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": ["npm"],
      "matchFileNames": ["static/talks/**"],
      "enabled": false
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "github-actions (non-major)",
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "groupName": "github-actions (major)",
      "automerge": false
    }
  ],
  "labels": ["dependencies"]
}
