{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    "group:allNonMajor"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "before 6am on monday"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "rebaseWhen": "behind-base-branch",
  "minimumReleaseAge": "3 days",
  "requiredStatusChecks": [
    "Deploy Hugo to GitHub Pages / Build",
    "Deploy Hugo to GitHub Pages / Deploy"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "monthly"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "github.com/adityatelange/hugo-PaperMod"
      ],
      "groupName": "hugo-theme",
      "automerge": false,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "static/talks/**"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    }
  ],
  "labels": [
    "dependencies"
  ]
}
