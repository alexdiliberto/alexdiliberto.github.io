{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchPaths": ["static/talks/**"],
      "enabled": false
    }
  ],
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "schedule": ["before 6am on monday"],
  "labels": ["dependencies"]
}
